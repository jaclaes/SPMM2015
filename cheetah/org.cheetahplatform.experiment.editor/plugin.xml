<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.cheetahplatform.experiment.editor.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="org.cheetahplatform.experiment.editor.Perspective"
            id="org.cheetahplatform.experiment.editor.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.cheetahplatform.experiment.editor.ui.New"
                  disabledIcon="icons/new_file_disabled.gif"
                  icon="icons/new_file.gif"
                  label="New Experiment"
                  style="push">
            </command>
            <command
                  commandId="org.cheetahplatform.experiment.editor.ui.Open"
                  icon="icons/open_file.gif"
                  label="Open Experiment"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="Save"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAs"
                  label="Save As"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.saveAll"
                  label="Save All"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
          <menu
               label="&amp;Edit">
            <command
                  commandId="org.eclipse.ui.edit.undo"
                  label="Undo"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.redo"
                  label="Redo"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.copy"
                  label="Copy"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.paste"
                  label="Paste"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.delete"
                  label="Delete"
                  style="push">
            </command>
            <command
                  commandId="org.cheetahplatform.experiment.editor.ui.ExportXML"
                  icon="icons/export.gif"
                  label="Export initial model to XML"
                  style="push">
            </command>
         </menu>
          <menu
               label="&amp;Window">
            <command
                  commandId="org.eclipse.ui.views.showView"
                  style="push">
            </command>
         </menu>
         <menu
               label="&amp;Help">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="org.cheetahplatform.experiment.editor.toolbar">
            <command
                  commandId="org.cheetahplatform.experiment.editor.ui.New"
                  disabledIcon="icons/new_file_disabled.gif"
                  icon="icons/new_file.gif"
                  style="push">
            </command>
            <command
                  commandId="org.cheetahplatform.experiment.editor.ui.Open"
                  icon="icons/open_file.gif"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.save"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.undo"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.redo"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.edit.delete"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.cheetahplatform.experiment.editor.ExperimentEditor"
            contributorClass="org.cheetahplatform.experiment.editor.ui.ExperimentEditorContributor"
            default="false"
            extensions="xml"
            icon="icons/experiment.gif"
            id="org.cheetahplatform.experiment.ExperimentEditor"
            matchingStrategy="org.cheetahplatform.experiment.editor.EditorMatchingStrategy"
            name="Experiment Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.cheetahplatform.experiment.editor.ui.NewExpCommand"
            id="org.cheetahplatform.experiment.editor.ui.New"
            name="New Experiment">
      </command>
      <command
            defaultHandler="org.cheetahplatform.experiment.editor.ui.OpenExpCommand"
            id="org.cheetahplatform.experiment.editor.ui.Open"
            name="Open Experiment">
      </command>
      <command
            defaultHandler="org.cheetahplatform.experiment.editor.ui.SaveAsCommand"
            id="org.cheetahplatform.experiment.editor.ui.SaveAs"
            name="Save As">
      </command>
      <command
            id="org.cheetahplatform.experiment.editor.ui.ExportXML"
            name="Export">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="org.eclipse.ui.file.exit"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+Q">
      </key>
      
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.cheetahplatform.experiment.editor.application"
            name="Cheetah Experiment Editor">
         <property
               name="appName"
               value="Cheetah Experiment Editor">
         </property>
         <property
               name="startupProgressRect"
               value="5,347,478,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="aboutText"
               value="Version 0.0.2">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipse.ui"
            class="org.cheetahplatform.experiment.editor.views.ValidationView"
            icon="icons/validation_view.gif"
            id="org.cheetahplatform.experiment.editor.views.ValidationView"
            name="Validierung">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.cheetahplatform.experiment.editor.ui.ExportXMLComand"
            commandId="org.cheetahplatform.experiment.editor.ui.ExportXML">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <instanceof
                        value="org.cheetahplatform.modeler.graph.editpart.NodeEditPart">
                  </instanceof>
                  <and>
                     <test
                           forcePluginActivation="false"
                           property="org.cheetahplatform.experiment.editor.canExportXML">
                     </test>
                  </and>
               </iterate>
               <count
                     value="1">
               </count>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="org.cheetahplatform.experiment.editor.ui.CanExportTester"
            id="org.cheetahplatform.experiment.editor.exportXML"
            namespace="org.cheetahplatform.experiment.editor"
            properties="canExportXML"
            type="java.lang.Object">
      </propertyTester>
   </extension>

</plugin>
