<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.cheetahplatform.conformance.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="org.cheetahplatform.conformance.Perspective"
            id="org.cheetahplatform.conformance.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.cheetahplatform.conformance.application"
            name="Cheetahplatform Conformance Checker">
         <property
               name="appName"
               value="Cheetahplatform Conformance Checker">
         </property>
      </product>
   </extension>

</plugin>
